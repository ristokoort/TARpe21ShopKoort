@model TARpe21ShopRisto.Models.Car.CarDeleteDetailsViewModel
@{
    string displaystring = "";
}
@if (Model.isDeleting)
{
    <h1>Delete</h1>
}
else
{
    <h1>Details</h1>
}


<div>

    <h4>Car</h4>
    <hr />
    <dl>
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Id)
        </div>

        <div class="form-group row">
            <label asp-for="Brand" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Brand)
        </div>

        <div class="form-group row">
            <label asp-for="Transmission" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Transmission)
        </div>

        <div class="form-group row">
            <label asp-for="Hp" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Hp)
        </div>

        <div class="form-group row">
            <label asp-for="EngineType" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.EngineType)
        </div>

        <div class="form-group row">
            <label asp-for="Previous_Ownership" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Previous_Ownership)
        </div>

        <div class="form-group row">
            <label asp-for="FuelTankCapacity" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.FuelTankCapacity)
        </div>

        <div class="form-group row">
            <label asp-for="TireSize" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.TireSize)
        </div>

        @foreach (var images in Model.FileToApiViewModels)
        {
            <partial name="_Images" model="images" />
        }

    </dl>

    @if (Model.isDeleting)
    {
        <form asp-action="DeleteConfirmation">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="index" asp-controller="cars" class="btn btn-primary">Back</a>
        </form>
    }
    else
    {
        <a asp-action="Index" asp-controller="cars" class="btn btn-primary">back</a>
    }

</div>